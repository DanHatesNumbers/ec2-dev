{
    "builders": [{
        "type": "amazon-ebs",
        "region": "eu-west-2",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "amzn-ami-hvm*-ebs",
                "root-device-type": "ebs"
            },
            "owners": ["137112412989"],
            "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ec2-user",
        "ami_name": "dev-env {{isotime | clean_ami_name}}"
    }],
    "provisioners": [{
        "type": "ansible",
        "playbook_file": "./ansible/baseline.yml"
    }]
}